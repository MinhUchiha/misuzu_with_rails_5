<%= javascript_include_tag 'jpt_holiday_msts' %>
<%provide(:title, (t 'title.jpt_hokiday_mst'))%>
<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <!-- <li><a href="#">基準情報</a></li> -->
  <!-- <li><a href="#">セキュリティ管理</a></li> -->
  <li class="active">ジュピター休日</li>
</ol>

<table id="holiday_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>休日</th>
    <th>タイトル</th>
    <th>備考</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @jpt_holiday_msts.each do |jpt_holiday_mst| %>
      <tr id="holiday_<%= jpt_holiday_mst.id %>">
        <td><%= jpt_holiday_mst.event_date %></td>
        <td><%= jpt_holiday_mst.title %></td>
        <td><%= jpt_holiday_mst.description %></td>
        <td><%= link_to '編集', edit_jpt_holiday_mst_path(jpt_holiday_mst) %></td>
        <% msg = t "app.delete_confirm" %>
        <td><%= link_to '削除', jpt_holiday_mst, method: :delete, data: { confirm: msg } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規', new_jpt_holiday_mst_path %>
<% if can? :update, @jpt_holiday_msts %>
  <h4>CSVでのデータをインポート!</h4>
  <%= form_tag import_jpt_holiday_msts_path,class:'form-inline', multipart: true do %>
      <div class="form-group">
        <%= label_tag 'selectcsv', nil, class: 'sr-only' %>
        <%= file_field_tag :file , class: 'btn btn-default' %>
      </div>
      <div class="form-group">
        <%= label_tag 'importcsv', nil, class: 'sr-only' %>
        <%= submit_tag "Import CSV" , class: 'btn btn-default' %>
      </div>
  <% end %>
<% end %>
